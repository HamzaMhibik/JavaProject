<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javaproject.fxmlControllers.Discussions">

    <children>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="600" prefHeight="400">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Champ de recherche -->
            <TextField fx:id="searchField" promptText="Rechercher une discussion..." maxWidth="300"/>

            <!-- Tableau des discussions -->
            <TableView fx:id="tableView" prefWidth="580">
                <columns>
                    <TableColumn fx:id="columnId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="columnNom" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="columnContenu" text="Contenu" prefWidth="250"/>
                    <TableColumn fx:id="columnAction" text="Action" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
