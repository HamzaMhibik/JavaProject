<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.javaproject.fxmlControllers.Historiques">
    <children>
        <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher un utilisateur..." />
                <DatePicker fx:id="datePicker" promptText="Filtrer par date..." />
            </HBox>
            <TableView fx:id="tableView" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn fx:id="columnId" text="ID" prefWidth="100" />
                    <TableColumn fx:id="columnUtilisateur" text="Utilisateur" prefWidth="200" />
                    <TableColumn fx:id="columnDate" text="Date" prefWidth="200" />
                    <TableColumn fx:id="columnAction" text="Actions" prefWidth="100" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>